{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "additionalProperties": false,
    "definitions": {
        "SetupStatusEnum": {
            "enum": [
                "success",
                "failure",
                "pending"
            ],
            "type": "string"
        }
    },
    "properties": {
        "code": {
            "description": "Response code",
            "type": "number"
        },
        "message": {
            "description": "Response message",
            "minLength": 1,
            "type": "string"
        },
        "status": {
            "$ref": "#/definitions/SetupStatusEnum",
            "description": "The current setup status of the application.\nCorresponds to the values defined in SetupStatusEnum."
        }
    },
    "required": [
        "code",
        "message",
        "status"
    ],
    "type": "object"
}


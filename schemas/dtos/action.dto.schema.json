{
    "$ref": "#/definitions/ActionDto",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "ActionDto": {
            "additionalProperties": false,
            "properties": {
                "icon": {
                    "description": "The icon of the action.",
                    "type": "string"
                },
                "label": {
                    "description": "The label of the action (optional).",
                    "type": "string"
                },
                "openMethod": {
                    "enum": [
                        "ajax_call",
                        "large_iframe",
                        "medium_iframe",
                        "small_iframe"
                    ],
                    "type": "string"
                },
                "url": {
                    "description": "The link of the action.",
                    "type": "string"
                }
            },
            "required": [
                "icon",
                "openMethod",
                "url"
            ],
            "type": "object"
        }
    }
}


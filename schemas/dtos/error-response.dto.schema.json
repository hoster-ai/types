{
    "$ref": "#/definitions/ErrorResponseDto",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "ErrorResponseDto": {
            "additionalProperties": false,
            "description": "DTO for error response\nUsed to return error information to the client",
            "properties": {
                "code": {
                    "description": "Unique error identifier\nUsed for error reporting and tracking",
                    "type": "string"
                },
                "errors": {
                    "anyOf": [
                        {
                            "items": {
                                "type": "string"
                            },
                            "type": "array"
                        },
                        {
                            "type": "string"
                        }
                    ],
                    "description": "Array or text with error messages\nMay contain one or more messages describing the error"
                }
            },
            "required": [
                "code"
            ],
            "type": "object"
        }
    }
}


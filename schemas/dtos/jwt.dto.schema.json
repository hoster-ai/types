{
  "$ref": "#/definitions/JwtDto",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "JwtDto": {
      "additionalProperties": false,
      "description": "DTO for JWT payload\nUsed for user authentication and authorization",
      "properties": {
        "jwt": {
          "additionalProperties": false,
          "description": "User information contained in the JWT token\nIncludes user and company identifiers, admin rights\nand optional sender details",
          "properties": {
            "acceptedRoles": {
              "description": "The roles accepted by the company for this integration",
              "items": {
                "$ref": "#/definitions/RolesEnum"
              },
              "type": "array"
            },
            "companyId": {
              "description": "Unique company identifier",
              "type": "string"
            },
            "integrationId": {
              "description": "Integration identifier",
              "type": "string"
            },
            "userId": {
              "description": "Unique user identifier that triggers the API call (only the /send method will not contain userId).",
              "type": "string"
            }
          },
          "required": [
            "acceptedRoles",
            "companyId",
            "integrationId"
          ],
          "type": "object"
        }
      },
      "required": [
        "jwt"
      ],
      "type": "object"
    }
  }
}
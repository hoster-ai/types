{
    "$ref": "#/definitions/BaseResponse",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "BaseResponse": {
            "additionalProperties": false,
            "description": "Base response class\nUsed as a foundation for all API responses",
            "properties": {
                "code": {
                    "description": "Response code",
                    "type": "number"
                },
                "message": {
                    "description": "Response message",
                    "minLength": 1,
                    "type": "string"
                }
            },
            "required": [
                "code",
                "message"
            ],
            "type": "object"
        }
    }
}


{
    "$ref": "#/definitions/AttachmentDto",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "AttachmentDto": {
            "additionalProperties": false,
            "description": "DTO for file attachments\nUsed for sending attached files with emails",
            "properties": {
                "content": {
                    "description": "The content of the file in Base64 encoding",
                    "type": "string"
                },
                "contentType": {
                    "description": "The content type of the file (MIME type)",
                    "type": "string"
                },
                "filename": {
                    "description": "The name of the attached file",
                    "type": "string"
                }
            },
            "required": [
                "content",
                "filename"
            ],
            "type": "object"
        }
    }
}

